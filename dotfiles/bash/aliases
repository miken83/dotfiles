#Shortcut to edit aliases files

alias ae="edit ~/bin/dotfiles/bash/aliases"

#Modified ls command
alias ll="ls -lahG"

#Shortcut to go up a directory
alias ..="cd .."

#Shortcut to go to previous working directory
alias cdd="cd -"

#Shortcut for history
alias h="history"

#Shortcut for ssh tunnel
alias ssht="ssh -ND 8080"

#Shortcut to reload source file
alias reload="source ~/.bashrc"

#Text Wrangler shortcut
alias e="edit"

#git shortcuts
alias g="git"
alias gca="git commit -am"
alias gp="git push"
alias gs="git status"

#Shortcut for join function
alias j="Join"

#Human friendly du and df
alias du="du -h"
alias df="df -h"

#Default to irb simple prompt
alias irb="irb --simple-prompt"




 

